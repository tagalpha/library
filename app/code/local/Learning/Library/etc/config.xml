<?xml version="1.0"?>
<config>
    <modules>
        <Learning_Library>
            <version>0.4.0</version>
        </Learning_Library>
    </modules>
    <global>
        <helpers>
            <learning_library>
                <class>Learning_Library_Helper</class>
            </learning_library>
        </helpers>
        <blocks>
            <learning_library>
                <class>Learning_Library_Block</class>
            </learning_library>
        </blocks>
        <models>
            <learning_library>
                <class>Learning_Library_Model</class>
                <resourceModel>learning_library_resource</resourceModel>
            </learning_library>
            <learning_library_resource>
                <class>Learning_Library_Model_Resource</class>
                <entities>
                    <editor>
                        <table>learning_library_editor</table>
                    </editor>
                    <editor_product>
                        <table>learning_library_editor_product</table>
                    </editor_product>
                </entities>
            </learning_library_resource>
        </models>
        <resources>
            <learning_library_setup>
                <setup>
                    <module>Learning_Library</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </learning_library_setup>
            <learning_library_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </learning_library_write>
            <learning_library_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </learning_library_read>
        </resources>
    </global>
    <frontend>
        <routers>
            <learning_library>
                <use>standard</use>
                <args>
                    <module>Learning_Library</module>
                    <frontName>library</frontName>
                </args>
            </learning_library>
        </routers>
        <layout>
            <updates>
                <learning_library>
                    <file>learning/library.xml</file>
                </learning_library>
            </updates>
        </layout>
        <events>
            <page_block_html_topmenu_gethtml_before>
                <observers>
                    <learning_library>
                        <class>learning_library/observer</class>
                        <method>addToTopmenu</method>
                    </learning_library>
                </observers>
            </page_block_html_topmenu_gethtml_before>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Learning_Library_Adminhtml before="Mage_Adminhtml">Learning_Library_Adminhtml</Learning_Library_Adminhtml>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <learning_library>
                    <files>
                        <default>Learning_Library.csv</default>
                    </files>
                </learning_library>
            </modules>
        </translate>
        <layout>
            <updates>
                <learning_library>
                    <file>learning/library.xml</file>
                </learning_library>
            </updates>
        </layout>
    </adminhtml>
</config>